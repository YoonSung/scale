<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spinner_txt_initialset"
            android:textColor="#000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/height"
            android:prompt="@string/spinner_initialset" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_txt_initialset"
            android:textColor="#000"
            android:textSize="18sp" />
		<RadioGroup
		    android:id="@+id/rdoGroup"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:layout_marginTop="5dp">
		    
            <RadioButton
                android:id="@+id/rdoMan"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_man_initialset" />

            <RadioButton
                android:id="@+id/rdoWoman"
                android:layout_marginLeft="50dp"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_woman_initialset" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_initialset"
        android:layout_marginTop="40dp"
        android:padding="40dp" />

</LinearLayout>