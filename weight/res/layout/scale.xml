<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scale"> 

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/imgDecimal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/no_0" />

            <ImageView
                android:id="@+id/imgUnit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/no_0" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:src="@drawable/no_dot" />

            <ImageView
                android:id="@+id/imgFloat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/no_0" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/no_kg" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/selector_shape_red"
        android:text="@string/scale_calculate_start" />

    <TextView
        android:id="@+id/txtNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:text="@string/scale_calculate_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:visibility="invisible"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/scale_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom" >
    </LinearLayout>
	
</FrameLayout>